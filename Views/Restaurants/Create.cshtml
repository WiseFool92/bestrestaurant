@{
  Layout = "_Layout";
}

@model TableData.Models.Restaurant

<h4>Add a new restaurant</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Phone)
  @Html.TextBoxFor(model => model.Phone)
  @Html.LabelFor(model => model.Address)
  @Html.TextBoxFor(model => model.Address)
  @Html.LabelFor(model => model.Rating)
  @Html.TextBoxFor(model => model.Rating)

  @Html.LabelFor(model => model.Cuisine)
  @Html.DropDownList("CuisineId")

  <br>

  <input type="submit" value="Add a new restaurant!" />
}

<p>@Html.ActionLink("Show all Restaurant", "Index")</p>